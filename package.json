{
  "name": "crud",
  "description": "Projeto do curso Criando um CRUD de Qualidade",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter main",
    "dev": "turbo run dev --parallel --filter=!core",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "is-ci || husky install",
    "main": "pnpm --filter main"
  },
  "devDependencies": {
    "eslint": "8.48.0",
    "eslint-config-custom": "workspace:*",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.7.0"
}
